<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emailthread_scrollable_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="#FDFDFD"
            android:paddingBottom="@dimen/bottom_spacing_for_bottomappbar">

            <ImageButton
                android:id="@+id/traffic_detail_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_keyboard_arrow_down_24dp"
                android:tint="#516771"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/traffic_detail_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="#414344"
                tools:text="작성자" />

            <TextView
                android:id="@+id/traffic_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_detail_writer"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#657D78"
                android:textSize="12sp"
                tools:text="날짜" />

            <TextView
                android:id="@+id/traffic_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_detail_date"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="8dp"
                android:textColor="#3C4242"
                android:textSize="18sp"
                android:fontFamily="@font/worksans_bold"
                android:gravity="left"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/traffic_detail_image"
                android:layout_marginStart="16dp"                    android:background="#EEF0F2"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:layout_below="@+id/traffic_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/traffic_detail_solve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/traffic_detail_image"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="해결 되었습니다!" />

            <Button
                android:id="@+id/traffic_detail_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/traffic_detail_solve"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorAccent"
                android:drawableStart="@drawable/ic_baseline_thumb_up_24"
                android:drawablePadding="16dp"
                android:paddingStart="120dp"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="좋아요!" />

            <TextView
                android:id="@+id/traffic_detail_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/traffic_detail_like"
                android:layout_alignEnd="@+id/traffic_detail_like"
                android:layout_alignBottom="@+id/traffic_detail_like"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:elevation="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp" />

        </RelativeLayout>
    </FrameLayout>

</ScrollView>
