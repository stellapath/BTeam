<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emailthread_scrollable_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="#FDFDFD"
            android:paddingBottom="@dimen/bottom_spacing_for_bottomappbar">

            <ImageButton
                android:id="@+id/traffic_modify_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_keyboard_arrow_down_24dp"
                android:tint="#516771"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/traffic_modify_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="#414344"
                tools:text="작성자" />

            <TextView
                android:id="@+id/traffic_modify_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_modify_writer"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#657D78"
                android:textSize="12sp"
                tools:text="날짜" />

            <EditText
                android:id="@+id/traffic_modify_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_modify_date"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="8dp"
                android:textColor="#3C4242"
                android:textSize="16sp"
                android:minHeight="200dp"
                android:gravity="left"
                android:padding="8dp"
                android:background="#EEF0F2"
                tools:hint="내용을 입력하세요" />

            <LinearLayout android:id="@+id/traffic_modify_attachment"
                style="@style/Expand.FakeClickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_modify_content"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_accent"
                    android:scaleType="centerCrop"
                    android:padding="8dp"
                    android:src="@drawable/ic_image"
                    tools:ignore="ContentDescription"
                    app:tint="#172629" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#EEF0F2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/traffic_modify_file_name"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/worksans_bold"
                        android:text="이미지 첨부"
                        android:textColor="#BF000000"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <ImageButton
                        android:id="@+id/traffic_modify_delete"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/traffic_modify_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/traffic_modify_attachment"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="#EEF0F2"
                android:visibility="gone"
                android:src="@drawable/placeholder" />

            <Button
                android:id="@+id/traffic_modify_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traffic_modify_image"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/color_accent"
                android:textSize="16sp"
                style="?android:borderlessButtonStyle"
                android:text="게시글 수정" />

        </RelativeLayout>
    </FrameLayout>

</ScrollView>
