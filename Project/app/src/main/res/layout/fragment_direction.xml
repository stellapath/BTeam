<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".direction.DirectionFragment"
    android:orientation="vertical">



    <TextView
        android:id="@+id/text_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECTION"
        android:textSize="24sp"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/dire_imgBtn"
        android:layout_width="184dp"
        android:layout_height="316dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/grayumbrella" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/receiveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배터리 용량 : "
                android:textSize="24sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/receiveData2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center" />
        </LinearLayout>

    <EditText
        android:id="@+id/sendEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터보내기"
        android:id="@+id/sendBtn"/>



</LinearLayout>