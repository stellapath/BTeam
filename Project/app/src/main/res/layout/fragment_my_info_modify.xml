<?xml version="1.0" encoding="utf-8"?>
<!--Bootom Cards with sections-->
<LinearLayout
    android:id="@+id/profile_myInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--About Me Card-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularbordersolid"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보 수정"
                    android:fontFamily="@font/proximanovaregular"
                    android:textColor="#2196F3"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/myInfo_modify_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:fontFamily="@font/proximanovaregular"
                    android:textColor="#E91E63"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/myInfo_modify_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textStyle="bold
"
                android:text="이메일 : " />

            <EditText
                android:id="@+id/myInfo_modify_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="별명" />

            <EditText
                android:id="@+id/myInfo_modify_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="전화번호" />

            <EditText
                android:id="@+id/myInfo_modify_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="주소" />

            <EditText
                android:id="@+id/myInfo_modify_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="생일" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
